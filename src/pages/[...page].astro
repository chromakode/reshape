---
import type { GetStaticPathsResult } from 'astro'
import { last } from 'lodash-es'
import Page from '../layouts/Page.astro'
import shapes from '../shapes.json'

const BASE_URL = import.meta.env.BASE_URL

export async function getStaticPaths() {
  const paths: GetStaticPathsResult = shapes.map(({ page, ...rest }) => ({
    params: { page: `page/${page}` },
    props: { page, ...rest },
  }))

  // The last page is the index page
  paths.push({
    params: { page: undefined },
    props: last(shapes),
  })

  return paths
}

export interface Props {
  page: number
  title: string
}

const { page, title } = Astro.props
---

<Page page={page}>
  <article class="shape">
    <img
      src={`${BASE_URL}image/${page}.png`}
      srcset={`${BASE_URL}image/${page}.png, ${BASE_URL}image/${page}_2x.png 2x`}
      alt={title}
    />
  </article>
</Page>

<style>
  :global(main) article.shape {
    margin: 14px 15px;
    aspect-ratio: 700 / 1000;
    overflow: hidden;
  }

  article.shape img {
    width: 100%;
  }

  @media (max-width: 480px) {
    :global(main) article.shape {
      margin: 2.25vw;
    }
  }
</style>
